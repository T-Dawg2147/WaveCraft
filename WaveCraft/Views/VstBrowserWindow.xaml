<Window x:Class="WaveCraft.Views.VstBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VST Plugin Browser"
        Width="750" Height="550"
        MinWidth="600" MinHeight="400"
        Background="#FF1E1E2E"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="BrowserBtn" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderBrush" Value="#FF45475A"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF45475A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scan path -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="VST PLUGIN SCANNER" Foreground="#FFA6ADC8"
                       FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding ScanPath, UpdateSourceTrigger=PropertyChanged}"
                         Background="#FF2D2D44" Foreground="#FFCDD6F4"
                         BorderBrush="#FF45475A" Padding="6,4"
                         CaretBrush="#FFCDD6F4" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="📁 Scan"
                        Style="{StaticResource BrowserBtn}"
                        Command="{Binding ScanDirectoryCommand}"/>
                <Button Grid.Column="2" Content="📄 Browse DLL"
                        Style="{StaticResource BrowserBtn}"
                        Command="{Binding BrowseForPluginCommand}"/>
                <Button Grid.Column="3" Content="🔍 Scan All"
                        Style="{StaticResource BrowserBtn}"
                        Command="{Binding ScanAllPathsCommand}"/>
            </Grid>
        </StackPanel>

        <!-- Scan paths list -->
        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Scan Directories:" Foreground="#FF6C7086"
                       FontSize="10" Margin="0,0,0,4"/>
            <ItemsControl ItemsSource="{Binding ScanPaths}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FF2D2D44" CornerRadius="3"
                                Padding="6,2" Margin="0,0,4,4">
                            <TextBlock Text="{Binding}" Foreground="#FF6C7086"
                                       FontSize="10"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Plugin list -->
        <Border Grid.Row="2" Background="#FF11111B" CornerRadius="4"
                BorderBrush="#FF45475A" BorderThickness="1">
            <ListView ItemsSource="{Binding DiscoveredPlugins}"
                      SelectedIndex="{Binding SelectedIndex}"
                      Background="Transparent" Foreground="#FFCDD6F4"
                      BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Type" Width="100"
                            DisplayMemberBinding="{Binding TypeLabel}"/>
                        <GridViewColumn Header="Name" Width="180"
                            DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Vendor" Width="140"
                            DisplayMemberBinding="{Binding Vendor}"/>
                        <GridViewColumn Header="Params" Width="60"
                            DisplayMemberBinding="{Binding NumParameters}"/>
                        <GridViewColumn Header="File" Width="200"
                            DisplayMemberBinding="{Binding FileName}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Status -->
        <Border Grid.Row="3" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding ScanStatus}"
                           Foreground="#FFA6ADC8" FontSize="11"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="✔ Load Selected"
                        Style="{StaticResource BrowserBtn}"
                        FontSize="13" Padding="16,6"
                        Click="OnLoadPlugin_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>