<Window x:Class="WaveCraft.Views.InstrumentSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instrument Selector"
        Width="600" Height="500"
        MinWidth="450" MinHeight="350"
        Background="#FF1E1E2E"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderBrush" Value="#FF45475A"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF45475A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="SELECT INSTRUMENT"
                   Foreground="#FFA6ADC8" FontWeight="Bold" FontSize="14"
                   Margin="0,0,0,8"/>

        <!-- Load buttons -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,8">
            <Button Content="🎹 Load SoundFont (.sf2)"
                    Style="{StaticResource Btn}"
                    Command="{Binding LoadSoundFontCommand}"/>
            <Button Content="🔌 Load VST Plugin (.dll)"
                    Style="{StaticResource Btn}"
                    Command="{Binding LoadVstCommand}"/>
            <Button Content="🗑 Remove Selected"
                    Style="{StaticResource Btn}"
                    Command="{Binding RemoveInstrumentCommand}"/>
        </WrapPanel>

        <!-- Instrument list -->
        <Border Grid.Row="2" Background="#FF11111B" CornerRadius="4"
                BorderBrush="#FF45475A" BorderThickness="1">
            <ListView ItemsSource="{Binding Instruments}"
                      SelectedIndex="{Binding SelectedIndex}"
                      Background="Transparent" Foreground="#FFCDD6F4"
                      BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4,2">
                            <TextBlock Text="{Binding CategoryLabel}"
                                       Foreground="#FF6C7086" FontSize="11"
                                       Width="180" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="#FFCDD6F4" FontSize="12"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Preview buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Preview:" Foreground="#FFA6ADC8"
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button Content="C3" Style="{StaticResource Btn}"
                    Command="{Binding PreviewNoteCommand}" CommandParameter="48"/>
            <Button Content="C4" Style="{StaticResource Btn}"
                    Command="{Binding PreviewNoteCommand}" CommandParameter="60"/>
            <Button Content="C5" Style="{StaticResource Btn}"
                    Command="{Binding PreviewNoteCommand}" CommandParameter="72"/>
            <Button Content="E4" Style="{StaticResource Btn}"
                    Command="{Binding PreviewNoteCommand}" CommandParameter="64"/>
            <Button Content="G4" Style="{StaticResource Btn}"
                    Command="{Binding PreviewNoteCommand}" CommandParameter="67"/>
            <Button Content="A4 (440Hz)" Style="{StaticResource Btn}"
                    Command="{Binding PreviewNoteCommand}" CommandParameter="69"/>
        </StackPanel>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding StatusText}"
                       Foreground="#FFA6ADC8" FontSize="11"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1" Content="✔ Apply"
                    Style="{StaticResource Btn}" FontSize="13"
                    Padding="16,6" Margin="0,0,4,0"
                    Click="OnApply_Click"/>
            <Button Grid.Column="2" Content="Cancel"
                    Style="{StaticResource Btn}" FontSize="13"
                    Padding="16,6"
                    Click="OnCancel_Click"/>
        </Grid>
    </Grid>
</Window>