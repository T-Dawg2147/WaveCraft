<Window x:Class="WaveCraft.Views.PianoRollWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WaveCraft.Views.Controls"
        Title="Piano Roll — MIDI Editor"
        Width="1200" Height="650"
        MinWidth="800" MinHeight="400"
        Background="#FF1E1E2E"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="ToolBtn" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="Foreground" Value="#FFCDD6F4"/>
            <Setter Property="BorderBrush" Value="#FF45475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF45475A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF585B70"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========== TOOLBAR ========== -->
        <Border Grid.Row="0" Background="#FF181825" Padding="6">
            <WrapPanel>
                <!-- Tools -->
                <TextBlock Text="Tool:" Foreground="#FFA6ADC8" VerticalAlignment="Center"
                           Margin="0,0,6,0"/>
                <Button Content="✏ Draw" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetToolCommand}" CommandParameter="Draw"/>
                <Button Content="⬚ Select" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetToolCommand}" CommandParameter="Select"/>
                <Button Content="✕ Erase" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetToolCommand}" CommandParameter="Erase"/>
                <Button Content="⏐ Velocity" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetToolCommand}" CommandParameter="Velocity"/>

                <Border Width="1" Background="#FF45475A" Margin="8,2"/>

                <!-- Grid -->
                <TextBlock Text="Grid:" Foreground="#FFA6ADC8" VerticalAlignment="Center"
                           Margin="0,0,6,0"/>
                <Button Content="1/4" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetGridCommand}" CommandParameter="480"/>
                <Button Content="1/8" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetGridCommand}" CommandParameter="240"/>
                <Button Content="1/16" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetGridCommand}" CommandParameter="120"/>
                <Button Content="1/32" Style="{StaticResource ToolBtn}"
                        Command="{Binding SetGridCommand}" CommandParameter="60"/>

                <Border Width="1" Background="#FF45475A" Margin="8,2"/>

                <!-- Edit -->
                <Button Content="↩ Undo" Style="{StaticResource ToolBtn}"
                        Command="{Binding UndoCommand}"/>
                <Button Content="↪ Redo" Style="{StaticResource ToolBtn}"
                        Command="{Binding RedoCommand}"/>

                <Border Width="1" Background="#FF45475A" Margin="8,2"/>

                <Button Content="⬆ +1" Style="{StaticResource ToolBtn}"
                        Command="{Binding TransposeUpCommand}" ToolTip="Transpose up 1 semitone"/>
                <Button Content="⬇ -1" Style="{StaticResource ToolBtn}"
                        Command="{Binding TransposeDownCommand}" ToolTip="Transpose down 1 semitone"/>
                <Button Content="⬆⬆ +12" Style="{StaticResource ToolBtn}"
                        Command="{Binding TransposeOctaveUpCommand}" ToolTip="Transpose up 1 octave"/>
                <Button Content="⬇⬇ -12" Style="{StaticResource ToolBtn}"
                        Command="{Binding TransposeOctaveDownCommand}" ToolTip="Transpose down 1 octave"/>

                <Border Width="1" Background="#FF45475A" Margin="8,2"/>

                <Button Content="🎯 Quantise" Style="{StaticResource ToolBtn}"
                        Command="{Binding QuantiseSelectedCommand}" ToolTip="Quantise to grid"/>
                <Button Content="📋 Duplicate" Style="{StaticResource ToolBtn}"
                        Command="{Binding DuplicateSelectedCommand}"/>
                <Button Content="🗑 Delete" Style="{StaticResource ToolBtn}"
                        Command="{Binding DeleteSelectedCommand}"/>

                <Border Width="1" Background="#FF45475A" Margin="8,2"/>

                <!-- Velocity -->
                <TextBlock Text="Vel:" Foreground="#FFA6ADC8" VerticalAlignment="Center"
                           Margin="0,0,4,0"/>
                <Slider Minimum="1" Maximum="127" Width="80"
                        Value="{Binding DefaultVelocity}"
                        VerticalAlignment="Center"/>
                <TextBlock Text="{Binding DefaultVelocity}" Foreground="#FFFAB387"
                           FontFamily="Consolas" VerticalAlignment="Center" Margin="4,0"/>
            </WrapPanel>
        </Border>

        <!-- ========== PIANO ROLL CANVAS ========== -->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#FF11111B">
            <controls:PianoRollControl
                x:Name="PianoRoll"
                ViewModel="{Binding}"
                Width="3000" Height="2048"/>
        </ScrollViewer>

        <!-- ========== STATUS BAR ========== -->
        <Border Grid.Row="2" Background="#FF181825" Padding="8,4">
            <TextBlock Text="{Binding StatusText}"
                       Foreground="#FFA6ADC8" FontSize="11"/>
        </Border>
    </Grid>
</Window>